<script type="text/javascript" charset="utf-8">
	//
	// Voor artikelen specifieke combo-data
	//
	var author_store;

	function load_custom_stores () {
		var author_store_data = new Array();
		<% User.find(:all).each do |user| %>
			author_store_data[author_store_data.length] = [<%= user.id.to_s %>, "<%= h user.name.gsub(/\"/,"\\") %>"];
		<% end %>

		author_store = new Ext.data.ArrayStore({
			fields: ['author_id', 'name'],
			data: author_store_data
		});
	}
	
	function modify_main_menu(menu) {
		var new_menu = [];
    $.each(
      menu,
      function (index,item) {
        var add_tab = true;
        
        add_tab = !(/right/.test(item.id));
        // alleen tab new
        //         if (/right/.test(item.id)) {
        //           var target_index = item.id.replace(/^right_/,"");
        //  $("#page #main_menu .actions > li ").each(function(index, li) {
        //    if (index == target_index) {
        //      if (/articles\/new/.test(li.getElementsByTagName("A")[0].href)) {
        //        add_tab = false;
        //      }
        //    }
        //  });
        // }
					
				if (add_tab) {
          new_menu[new_menu.length] = item;
        }
      }
    );
    return new_menu;
  }
  
  
  //
  // Init CRUD
  //
	function extjs_body_items() {
		load_custom_stores();
		return init_lico_adva_crud({
			columns: [{
				label: 'titel',
				name: 'title',
				type: 'string',
				submit_value: 'photo[title]'
			},{
				label: 'Redacteur',
				name: 'author',
				type: 'combo',
				submit_value: 'photo[author_id]',
				combo: {
					value: 'author_id',
					label: 'name',
					store: author_store
				}
			},{
				label: 'published',
				name: 'published',
				type: 'string',
			}],
      add_record_path: '<%= admin_photos_path(@site.id, @section) %>',
      store: {
        url: '<%= url_for admin_photos_path(@site.id, @section) %>.xml',
        sort: {
          by: 'title',
          order: 'asc'
        }
      },
      grid: {
        //empty_details: t['board']['selection_empty']
      },
      show: {
        url: '<%= edit_admin_photo_path(@site, @section, '!recordid!') %>',
        custom_form: edit_photo_form,
        custom_form_values: edit_photo_form_values
      },
      edit: {
        url: '<%= admin_photo_path(@site, @section, '!recordid!') %>'
      },
      destroy: {
        url: '<%= admin_photo_path(@site, @section, '!recordid!') %>',
        //message: t['board']['delete_confirm']
      }
    });
  }
  
  function edit_photo_form_values (parameters) {
		parameters["photo[title]"] = document.getElementById('title').value;
		parameters["photo[author]"] = document.getElementById('author_id').value;
		parameters["photo[comment_age]"] = document.getElementById('comment_age').value;
		parameters["photo[tag_list]"] = document.getElementById('tag_list').value;

		return parameters;
	}

	function edit_photo_form (record) {
		var title = xmlvalue(record,"title");
		var author = xmlvalue(record, "author");
		var comment_age = xmlvalue(record, "comment_age");
		var tag_list = xmlvalue(record, "tag_list");
		selected_record_title = title;

		return [{
			xtype: 'tabpanel',
			plain: true,
			activeTab: 0,
			defaults: {
				bodyStyle: 'padding:10px'
			},
			items: [{
				title: 'Photo',
				layout: 'column',
				border: false,
				items: [{
					columnWidth: .5,
					layout: 'form',
					border: false,
					items: [{
						xtype: 'textfield',
						fieldLabel: 'titel',
						id: 'title',
						name: 'title',
						value: title
					},{

					},{
						xtype: 'textfield',
						fieldLabel: 'Tag list',
						id: 'tag_list',
						name: 'tag_list',
						value: tag_list
					},{
						xtype: 'combo',
						fieldLabel: 'Gewijzigd door',
						name: 'author_id',
						value: author,
						store: author_store,
						valueField: 'author_id',
						displayField: 'name',
						mode: 'local',
						hiddenName: 'record_author_id',
						hiddenId: 'record_author_id'
					}]
				}]
			}]
		}];
	}
</script>
