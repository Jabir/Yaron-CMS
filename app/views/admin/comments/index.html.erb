<% content_for :sidebar do end %>
<script type="text/javascript" charset="utf-8">
function extjs_body_items() {
	return init_lico_adva_crud({
		columns: [{
			label: '<%= t(:'Yaron-CMS.common.author') %>',
			name: 'author',
			type: 'string'
		},{
			label: '<%= t(:'Yaron-CMS.common.date') %>',
			name: 'updated_at',
			type: 'string'
		},{
			label: '<%= t(:'Yaron-CMS.titles.comment_on') %>',
			name: 'comment_for',
			type: 'string',
		},{
			label: '<%= t(:'Yaron-CMS.titles.approved') %>',
			name: 'active',
			type: 'boolean'
		}],
		store: {
			url: '<%= url_for admin_comments_path %>.xml',
			sort: {
			  by: 'updated_at',
				order: 'desc'
			}
		},
		grid: {
      empty_details: '<%= t(:'Yaron-CMS.grid.comments') %>'
		},
		show: {
			url: '<%= edit_admin_comment_path('!recordid!') %>',
			custom_form: edit_comment_form,
			custom_form_values: edit_comment_form_values
		},
		edit: {
			url: '<%= admin_comment_path('!recordid!') %>',
			custom_actions: function(doc) {
				var active = xmlvalue(doc,"active");
				buttons = [];
				if (active=="1") {
					buttons[buttons.length] = {
						text: '<%= t(:'Yaron-CMS.common.approve_revoke') %>',
						iconCls: 'silk-delete',
						handler: function(btn, ev) {
							if (grid.getSelectionModel().hasSelection()) {
								var cell = grid.getSelectionModel().getSelected();
								Ext.Msg.show({
									id: 'publish-confirm',
									title: '<%= t(:'Yaron-CMS.common.approve_revoke') %>',
									msg: '<%= t(:'Yaron-CMS.confirm.revoke.comments') %>',
									buttons: {
										ok: '<%= t(:'Yaron-CMS.common.revoke') %>',
										cancel: '<%= t(:'Yaron-CMS.common.cancel.') %>'
									},
									icon: Ext.MessageBox.QUESTION,
									fn: function(btn) {
										if (btn == "ok") {
											var mask = new Ext.LoadMask(Ext.getBody(), {
												msg: t['loader_text']
											});
											mask.show();
              				$.ajax({
              					url: xmlvalue(selected_record,"unapprove_link"),
              					cache: false,
              					data: {
              						authenticity_token: window._auth_token,
                          _method: 'put',
                          "comment[approved]": 0,
													"site_id" : <%= @site.id %>,
													"id" : xmlvalue(selected_record,"id"),
              					},
              					type: 'POST',
              					success: function(html) {
              						store.reload();
              						mask.hide();
              					}
              				});
              			}
              		}
              	});
              }
            },
            scope: this
          }
        } else {
					buttons[buttons.length] = {
						text: '<%= t(:'Yaron-CMS.common.approve') %>',
						iconCls: 'silk-accept',
						handler: function(btn, ev) {
							if (grid.getSelectionModel().hasSelection()) {
								var cell = grid.getSelectionModel().getSelected();
								Ext.Msg.show({
									id: 'publish-confirm',
									title: '<%= t(:'Yaron-CMS.common.approve') %>',
									msg: '<%= t(:'Yaron-CMS.confirm.approve.comments') %>',
									buttons: {
										ok: '<%= t(:'Yaron-CMS.common.approve') %>',
										cancel: '<%= t(:'Yaron-CMS.common.cancel') %>'
									},
									icon: Ext.MessageBox.QUESTION,
									fn: function(btn) {
										if (btn == "ok") {
											var mask = new Ext.LoadMask(Ext.getBody(), {
												msg: t['loader_text']
											});
											mask.show();
              				$.ajax({
              					url: xmlvalue(selected_record,"approve_link"),
              					cache: false,
              					data: {
              						authenticity_token: window._auth_token,
                          _method: 'put',
                          "comment[approved]": 1,
													"site_id" : <%= @site.id %>,
													"id" : xmlvalue(selected_record,"id"),
              					},
              					type: 'POST',
              					success: function(html) {
              						store.reload();
              						mask.hide();
              					}
              				});
              			}
              		}
              	});
              }
            },
            scope: this
          }
        }
        return buttons;
      }
    },
		destroy: {
			url: '<%= admin_comment_path(@site, '!recordid!') %>',
      message: '<%= t(:'Yaron-CMS.confirm.remove.comments') %>'
		}
	});
}

function edit_comment_form_values (parameters) {
  parameters["comment[body]"] = document.getElementById('record_body').value;
	return parameters;
}

function edit_comment_form (record) {
  var body = xmlvalue(record,"body");

  return [{
    layout: 'fit',
    height: 170,
    items: {
        xtype: 'textarea',
        id: 'record_body',
        name: 'body',
        value: body
    }
  }];
}
  
</script>