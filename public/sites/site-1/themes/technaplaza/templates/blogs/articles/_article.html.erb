<% if article && (mode == :single || article.position >= 0) %>
<div class="containerPlus  {skin:'white', icon:'page_preview.png'}">
	<div class="no"><div class="ne"><div class="n blog_normal"><%= link_to_content(article) %></div></div>
		<div class="o"><div class="e"><div class="c">
			<div class="mbcontainercontent">
  <div id="<%= dom_id(article) %>" class="entry clearing">
  	<div class="content">
  		<% article.assets.each do |asset| %>
			<div class="floatleft">
			  <% if asset.matches?(:pdf) %>
			    <%= image_tag(mode == :single ? '/images/pdf.png' : '/images/pdf.png') %>
			  <% elsif asset.matches?(:movie) && mode == :single %>
  			  <div style="display:block;width:310px;height:200px;" id="asset_huluPlayer"></div>
          <div id="asset_hulu" class="hulu"></div>
          <script>
            $(window).load(function() {
              $f("asset_huluPlayer", "/sites/site-2/themes/technaplaza/flash/flowplayer-3.1.3.swf", {
                clip: {
                  baseUrl: '/sites/site-2/assets/',
                  subTitle: 'Filmpje', 
                  autoPlay: false, 
                  autoBuffering: true 
                }, 
                playlist: [
                  "<%= asset.base_url(:normal)%>"
                ],
                plugins: {controls: null}
              }).controls("asset_hulu", {duration: 25}) 
            });
          </script>	
			  <% else %>
			    <%= image_tag(asset.base_url(mode == :single ? :medium : :tiny)) %>
			  <% end %>
			</div>
		<% end %>
  	  <% if article.has_excerpt? %>
  	    <%= article.excerpt_html %>
  	    <p><%= link_to_content t( :'adva.blog.links.more' ), article unless mode == :single %></p>
  	  <% end %>
      <%= article.body_html if mode == :single || !article.has_excerpt? %>
    </div>
	  	<div class="meta">
  	  <p>
  	    <%= datetime_with_microformat(article.published_at, :format => :long, :type => :date) %>
  	    <%= t(:'adva.blog.attribution', :author => article.author_name) %>
    	  <%= link_to_content_comments article if (article.accept_comments? || article.comments.present?) && mode != :single %>
    	  <% authorized_tag :span, :update, article do -%>
      	<%= links_to_content_categories article, :'adva.common.content_categories' %>
      	<%= links_to_content_tags article, :'adva.common.content_tags' %>
      		<%= link_to t(:'adva.common.edit'), edit_admin_article_path(@site, @section, article) %>
		    <% end -%>
      </p>
  	</div>
	</div>
	</div>
	</div>
	</div>
	</div>
	            <div class="so"><div class="se"><div class="s"></div></div></div>
	          </div>
	        </div>

<% end %>
