<% if article %>
<div id="summary_big">
  <div id="<%= dom_id(article) %>" class="entry clearing">

  	
    	<h2>
    	  <%= link_to_content article %>
    	</h2> 
		<h3> <%= t(:'adva.blog.attribution', :author => article.author_name) %></h3>
  	  <p><% if article.has_excerpt? %>

  	    <%= article.excerpt_html %></p>
  	    <p><%= link_to_content t( :'adva.blog.links.more' ), article unless mode == :single %>
		<%= article.body_html if mode == :single || !article.has_excerpt? %>
		</p>
  	  <% end %>
      
    </div>
	  	<div class="meta">
  	  <p>
  	    <%= datetime_with_microformat(article.published_at, :format => :long) %><br />
  	   <script>
		var idcomments_acct = 'c38d9db2caf240b9ba62597e5da18850';
		var idcomments_post_id;
		var idcomments_post_url;
		</script>

		
		
    	  
    	  <% authorized_tag :span, :update, article do -%>
      		<%= link_to t(:'adva.common.edit'), edit_admin_article_path(@site, @section, article) %>
		    <% end -%>
  	  </p>
  	  <p>
  	  		  		
			
			
			
      	<%= links_to_content_categories article, :'adva.common.content_categories' %>
      	<%= links_to_content_tags article, :'adva.common.content_tags' %>
      </p>
  	</div>
  </div>
  
<% end %>