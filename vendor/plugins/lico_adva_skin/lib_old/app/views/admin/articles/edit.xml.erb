<root>
  <record>
    <id><%= @article.id.to_s %></id>
    <title><%= h @article.title %></title>
    <draft><%= @article.draft? ? "1" : "0" %></draft>
    <date><%= @article.updated_at.strftime("%Y-%m-%d") %></date>
    <author><%= h @article.author.id if @article.author %></author>
    <category><%= h @article.category.id if @article.category %></category>
    <excerpt><%= h @article.excerpt_html %></excerpt>
    <body><%= h @article.body_html %></body>
  
    <meta>
      <keywords><%= h meta_value_from(@article.meta_keywords, @site.meta_keywords) %></keywords>
      <description><%= h meta_value_from(@article.meta_description, @site.meta_description) %></description>
      <author><%= h meta_value_from(@article.meta_author, @site.meta_author) %></author>
      <copyright><%= h meta_value_from(@article.meta_copyright, @site.meta_copyright) %></copyright>
      <geourl><%= h meta_value_from(@article.meta_geourl, @site.meta_geourl) %></geourl>
    </meta>
  
    <options>
      <permalink><%= h @article.permalink %></permalink>
      <tag_list><%= h @article.tag_list %></tag_list>
      <filter><%= h @article.filter %></filter>
    </options>
  </record>
</root>