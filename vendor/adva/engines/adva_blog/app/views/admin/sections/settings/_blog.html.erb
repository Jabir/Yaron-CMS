<script type="text/javascript" charset="utf-8">
  register_tab('blog');
  function blog_tab() {
    return {
      title: '<%= t(:'adva.sections.titles.blog_settings') %>',
      defaults: {
        layout: 'form',
        labelWidth: 120,
        defaultType: 'textfield',
        bodyStyle: 'padding:10px'
      },
      items: [{
        fieldLabel: 'Contents per page',
        name: 'section[contents_per_page]',
        value: document.getElementById('section_contents_per_page').value,
        xtype: 'textfield',
        width: 200
      },{
        fieldLabel: 'Content filter',
        name: 'section[content_filter]',
        xtype: 'combo',
        triggerAction: 'all',
        forceSelection: true,
        transform:     'section_content_filter',
        lazyRender:     true
      }]
    }
  }
</script>
<h2><%= t(:'adva.sections.titles.blog_settings') %></h2>

<% f.field_set :blog_settings do %>
  <% column do %>
    <%= f.text_field :contents_per_page, :label => true %>
	<% end %>

  <% column do %>
    <%= f.select :content_filter, filter_options, {}, :label => true, :hint => :'adva.sections.hints.content_filter' %>
	<% end %>
<% end %>
